<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="44"
    android:columnCount="2"
    android:nestedScrollingEnabled="false">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6495987282334475/4846107949"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp">
    </com.google.android.gms.ads.AdView>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 1"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/adView1"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 5"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/checkBox1"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 25"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 50"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 100"
        android:id="@+id/checkBox5"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 250"
        android:id="@+id/checkBox6"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_below="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a highscore of 500"
        android:id="@+id/checkBox7"
        android:checked="false"
        android:textSize="25dp"
        android:clickable="false"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_below="@+id/checkBox6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:text="Back"
        android:id="@+id/backbutton"
        android:singleLine="false"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="25"
        android:layout_column="0"
        android:layout_row="42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current highscore:"
        android:id="@+id/curhs"
        android:layout_column="1"
        android:layout_row="41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox7"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7"
        android:layout_marginTop="26dp" />


</RelativeLayout>